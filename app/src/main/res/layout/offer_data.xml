<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/offer_prod_img"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:gravity="center"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/offer_prod_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:text="Min 70% off"
                    android:textColor="@color/colorblue"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/offer_prize_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Wrist Watches"
                    android:textColor="@color/colorTex"
                    android:textSize="13dp"

                    />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Explore now!"
                    android:textColor="@color/colorSub"
                    android:textSize="13dp"
                    android:layout_gravity="center"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

