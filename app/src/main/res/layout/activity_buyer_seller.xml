<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.winklix.indu.gooni.activities.BuyerSellerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_seller_login"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_btn_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="For Seller"
        android:textSize="18sp"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_buyer_login"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/ic_btn_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="For Buyer"
        android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>